<Page x:Class="Software_Project.sub_view.Doctor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Software_Project.sub_view"
      mc:Ignorable="d"
      Title="Doctor Management" Height="600" Width="900"
      Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="5"
                Padding="20" 
                Margin="0,0,0,20">
            <StackPanel>
                
                <TextBlock Text="Add New Doctor" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="#333333"
                          Margin="0,0,0,20"/>

                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                              Text="ID:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                            Name="ID" 
                            Height="25"
                            VerticalAlignment="Center"
                            Padding="5"
                            BorderBrush="#CCCCCC"/>

                    <TextBlock Grid.Row="0" Grid.Column="3" 
                              Text="First Name:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium"/>
                    <TextBox Grid.Row="0" Grid.Column="4" 
                            Name="txtFirstName" 
                            Height="25"
                            VerticalAlignment="Center"
                            Padding="5"
                            BorderBrush="#CCCCCC"/>

                    
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                              Text="Last Name:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                            Name="txtLastName" 
                            Height="25"
                            VerticalAlignment="Center"
                            Padding="5"
                            BorderBrush="#CCCCCC"/>

                    <TextBlock Grid.Row="1" Grid.Column="3" 
                              Text="Specialization:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium"/>
                    <TextBox Grid.Row="1" Grid.Column="4" 
                            Name="txtSpecialization" 
                            Height="25"
                            VerticalAlignment="Center"
                            Padding="5"
                            BorderBrush="#CCCCCC"/>

                   
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                              Text="Phone:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                            Name="txtPhone" 
                            Height="25"
                            VerticalAlignment="Center"
                            Padding="5"
                            BorderBrush="#CCCCCC"/>

                    <TextBlock Grid.Row="2" Grid.Column="3" 
                              Text="Experience:" 
                              VerticalAlignment="Center" 
                              FontWeight="Medium"/>
                    <TextBox Grid.Row="2" Grid.Column="4" 
                            Name="txtExperience" 
                            Height="25"
                            VerticalAlignment="Center"
                            Padding="5"
                            BorderBrush="#CCCCCC"/>
                </Grid>

                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0,20,0,0">
                    <Button Name="btnAdd" 
                           Content="Create Account" 
                           Width="100"
                           Height="30"
                           Background="#4CAF50"
                           Foreground="White"
                           BorderThickness="0"
                           Margin="0,0,10,0"
                           Click="btnAdd_Click"/>

                    <Button Name="update" 
                           Content="Update" 
                           Width="80"
                           Height="30"
                           Background="#2196F3"
                           Foreground="White"
                           BorderThickness="0"
                           Margin="0,0,10,0"
                           Click="btnUpdate_Click"/>

                    <Button Name="btnClear" 
                           Content="Delete" 
                           Width="80"
                           Height="30"
                           Background="#FF9800"
                           Foreground="White"
                           BorderThickness="0"
                           Margin="0,0,10,0"/>

                    <Button Name="Go_to_admin" 
                           Content="Go Back" 
                           Width="80"
                           Height="30"
                           Background="#757575"
                           Foreground="White"
                           BorderThickness="0"
                           Click="Button_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="5"
                Padding="20">
            <StackPanel>
                <TextBlock Text="Doctors List" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="#333333"
                          Margin="0,0,0,15"/>

                <DataGrid Name="dgDoctors" 
                         AutoGenerateColumns="False" 
                         CanUserAddRows="False" 
                         HeadersVisibility="Column" 
                         GridLinesVisibility="Horizontal"
                         Background="White"
                         RowBackground="White"
                         AlternatingRowBackground="#F9F9F9"
                         BorderThickness="0"
                         SelectionChanged="dgDoctors_SelectionChanged" RenderTransformOrigin="0.5,0.5" Width="665">
                    <DataGrid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.057"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </DataGrid.RenderTransform>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <Setter Property="Foreground" Value="#333333"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                          Binding="{Binding Id}" 
                                          Width="60" 
                                          IsReadOnly="True"/>

                        <DataGridTextColumn Header="First Name" 
                                          Binding="{Binding FirstName}" 
                                          Width="120" 
                                          IsReadOnly="True"/>

                        <DataGridTextColumn Header="Last Name" 
                                          Binding="{Binding LastName}" 
                                          Width="120" 
                                          IsReadOnly="True"/>

                        <DataGridTextColumn Header="Specialization" 
                                          Binding="{Binding Specialization}" 
                                          Width="150" 
                                          IsReadOnly="True"/>

                        <DataGridTextColumn Header="Phone" 
                                          Binding="{Binding Phone}" 
                                          Width="120" 
                                          IsReadOnly="True"/>

                        <DataGridTextColumn Header="Experience" 
                                          Binding="{Binding Experience}" 
                                          Width="100" 
                                          IsReadOnly="True"/>

                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Delete"
                                           Tag="{Binding Id}"
                                           Width="70"
                                           Height="25"
                                           Background="#F44336"
                                           Foreground="White"
                                           BorderThickness="0"
                                           FontSize="11"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Page>