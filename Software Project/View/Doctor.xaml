<Page x:Class="Software_Project.View.Doctor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Software_Project.View"
      mc:Ignorable="d" 
      d:DesignHeight="651.474"
      Title="Doctor" Width="899">


    <Grid Background="#FF2E86C1" Margin="0,0,-152,-12">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#FF1B4F72">
            <TextBlock Text="Clinic Management System - Doctor Panel" 
                  FontSize="24" 
                  FontWeight="Bold"
                  Foreground="White" 
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>

            <Button x:Name="LogoutBtn" 
               Content="Logout" 
               Width="80" 
               Height="35"
               Background="#FFDC3545" 
               Foreground="White"
               FontWeight="Bold"
               BorderThickness="0"
               HorizontalAlignment="Right" 
               VerticalAlignment="Center"
               Margin="20" Click="LogoutBtn_Click"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Background="#FFE8F4F8" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Menu Panel -->
            <StackPanel Grid.Column="0" Background="#FFFFFF" Margin="10" Orientation="Vertical">

                <!-- Menu Title -->
                <TextBlock Text="Management Menu" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="#FF1B4F72"
                      HorizontalAlignment="Center"
                      Margin="10,20,10,20"/>

                <!-- Patient Management Section -->
                <Border Background="#FF85C1E9" Margin="10,5" CornerRadius="5">
                    <StackPanel Margin="10">
                        <TextBlock Text="Patient Management" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Foreground="#FF1B4F72"
                              Margin="0,5"/>

                        <Button x:Name="ViewPatientsBtn" 
                           Width="180" 
                           Height="30"
                           Background="#FF3498DB" 
                           Foreground="White"
                           BorderThickness="0"
                           Margin="0,3" >
                            <RadioButton Content="Add / Patientiwe" Checked="RadioButton_Checked"/>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Doctor Management Section -->
                <Border Background="#FF85C1E9" Margin="10,5" CornerRadius="5">
                    <StackPanel Margin="10">
                        <TextBlock Text="Doctor Management" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Foreground="#FF1B4F72"
                              Margin="0,5"/>

                        <Button x:Name="ViewDoctorsBtn" 
                           Content="View / Add Doctors" 
                           Width="180" 
                           Height="30"
                           Background="#FF28A745" 
                           Foreground="White"
                           BorderThickness="0"
                           Margin="0,3" Click="ViewDoctorsBtn_Click" />
                    </StackPanel>
                </Border>

                <!-- Appointment Management Section -->
                <Border Background="#FF85C1E9" Margin="10,5" CornerRadius="5"/>

                <!-- Prescription Management Section -->
                <Border Background="#FF85C1E9" Margin="10,5" CornerRadius="5">
                    <StackPanel Margin="10">
                        <TextBlock Text="Prescription Management" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Foreground="#FF1B4F72"
                              Margin="0,5"/>

                        <Button x:Name="ViewPrescriptionsBtn" 
                           Content="View Prescriptions" 
                           Width="180" 
                           Height="30"
                           Background="#FF6F42C1" 
                           Foreground="White"
                           BorderThickness="0"
                           Margin="0,3"/>

                        <Button x:Name="CreatePrescriptionBtn" 
                           Content="Create Prescription" 
                           Width="180" 
                           Height="30"
                           Background="#FF6F42C1" 
                           Foreground="White"
                           BorderThickness="0"
                           Margin="0,3"/>
                    </StackPanel>
                </Border>

                <!-- Reports Section -->
                <Border Background="#FF85C1E9" Margin="10,5" CornerRadius="5">
                    <StackPanel Margin="10">
                        <TextBlock Text="Reports" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Foreground="#FF1B4F72"
                              Margin="0,5"/>

                        <Button x:Name="GenerateReportsBtn" 
                           Content="Generate Reports" 
                           Width="180" 
                           Height="30"
                           Background="#FFFD7E14" 
                           Foreground="White"
                           BorderThickness="0"
                           Margin="0,3"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Content Panel -->
            <Grid Grid.Column="1" Background="#FFFFFF" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Welcome Message -->
                <Border Grid.Row="0" Background="#FF5DADE2" Margin="10">
                    <TextBlock Text="Welcome to Doctor Dashboard" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Border>

                <!-- Statistics Cards -->
                <Grid Grid.Row="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Patients Card -->
                    <Border Grid.Column="0" Background="#FF28A745" Margin="5" CornerRadius="5">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="TotalPatientsLabel" 
                                  Text="150" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Patients" 
                                  FontSize="12" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Doctors Card -->
                    <Border Grid.Column="1" Background="#FF3498DB" Margin="5" CornerRadius="5">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="TotalDoctorsLabel" 
                                  Text="12" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Doctors" 
                                  FontSize="12" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Appointments Today Card -->
                    <Border Grid.Column="2" Background="#FFFFC107" Margin="5" CornerRadius="5">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="TodayAppointmentsLabel" 
                                  Text="28" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="Black" 
                                  HorizontalAlignment="Center"/>
                            <TextBlock Text="Today's Appointments" 
                                  FontSize="12" 
                                  Foreground="Black" 
                                  HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Prescriptions Card -->
                    <Border Grid.Column="3" Background="#FF6F42C1" Margin="5" CornerRadius="5">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="TotalPrescriptionsLabel" 
                                  Text="340" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                            <TextBlock Text="Prescriptions" 
                                  FontSize="12" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Main Content Area -->
                <Grid Grid.Row="2" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Content Title -->
                    <Border Grid.Row="0" Background="#FF85C1E9">
                        <TextBlock x:Name="ContentTitleLabel" 
                              Text="Recent Activities" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Foreground="#FF1B4F72"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>

                    <!-- Content Display Area -->
                    <Border Grid.Row="1" Background="#FFF8F9FA" BorderBrush="#FFAED6F1" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,173">
                            <StackPanel x:Name="ContentDisplayPanel" Margin="15">

                                <!-- Sample Recent Activities -->

                                <!-- Quick Actions -->
                                <TextBlock Text="Quick Actions:" 
                                      FontSize="14" 
                                      FontWeight="Bold"
                                      Foreground="#FF1B4F72"
                                      Margin="0,20,0,10"/>

                                <StackPanel Orientation="Horizontal">

                                    <Button x:Name="QuickReportsBtn" 
                                       Content="View Reports" 
                                       Width="120" 
                                       Height="35"
                                       Background="#FFFD7E14" 
                                       Foreground="White"
                                       BorderThickness="0"
                                       Margin="5"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>


</Page>
